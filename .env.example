# Application
PORT=40000
NEXT_PUBLIC_APP_URL=http://localhost:40000

# Database
DATABASE_URL=postgresql://todo_user:todo_pass@localhost:40001/todo_db
POSTGRES_PORT=40001
POSTGRES_USER=todo_user
POSTGRES_PASSWORD=todo_pass
POSTGRES_DB=todo_db

# Node Environment
NODE_ENV=development

# Admin API Key (change in production)
ADMIN_API_KEY=admin-secret-key-change-in-production

# Bcrypt rounds for password hashing
BCRYPT_ROUNDS=12

# Session settings
SESSION_DURATION_DAYS=30
PASSWORD_RESET_EXPIRY_HOURS=1

# Email settings (MailHog for development)
SMTP_HOST=localhost
SMTP_PORT=40025
SMTP_FROM=noreply@todoapp.local
# For production, set SMTP_USER and SMTP_PASS
